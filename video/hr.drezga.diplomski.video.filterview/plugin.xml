<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="Filters.view"
            name="Filters">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="DiplomskiWorkspace.perspective">
         <view
               id="Filters.view"
               minimized="false"
               relationship="bottom"
               relative="Producers.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:Producers.view">
         <command
               commandId="OpenVideoFilter.command"
               label="Open video filter"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <instanceof
                           value="hr.drezga.diplomski.video.core.IVideoProducer">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="VideoFilter.view"
            name="VideoFilterView">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.springframework.util.SpringExtensionFactory"
            id="OpenVideoFilter.command"
            name="OpenVideoFilter">
      </command>
   </extension>

</plugin>
