<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            fixed="true"
            id="DiplomskiWorkspace.perspective"
            name="Default perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="Producers.view"
            name="Producers">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="DiplomskiWorkspace.perspective">
         <view
               closeable="false"
               id="Producers.view"
               minimized="false"
               ratio="0.1"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu ">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.equinox.p2.ui.sdk.install"
                  label="Install"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:Producers.view">
         <command
               commandId="OpenVideo.command"
               label="Open video"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <instanceof
                           value="hr.drezga.diplomski.video.core.IVideoProducer">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="Video.view"
            name="VideoView">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.springframework.util.SpringExtensionFactory"
            id="OpenVideo.command"
            name="OpenVideo">
      </command>
   </extension>
   <extension
         id="Diplomski.application"
         name="Diplomski"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="hr.drezga.diplomski.workspace.Application">
         </run>
      </application>
   </extension>
   <extension
         id="diplomski"
         point="org.eclipse.core.runtime.products">
      <product
            application="Diplomski.application"
            name="Diplomski">
         <property
               name="appName"
               value="Diplomski">
         </property>
      </product>
   </extension>

</plugin>
