	</bean>
	<osgi:service id="grayScaleFilterService" interface="hr.drezga.diplomski.video.core.IVideoFilter" ref="grayScaleFilter">
		<osgi:service-properties>
			<entry key="name" value="GrayScaleFilter"/>
