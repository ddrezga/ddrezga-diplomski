	</bean>
	<osgi:service id="colorHalfToneFilterService" interface="hr.drezga.diplomski.video.core.IVideoFilter" ref="colorHalfToneFilter">
		<osgi:service-properties>
			<entry key="name" value="ColorHalfToneFilter"/>
		</osgi:service-properties>
	</osgi:service>

