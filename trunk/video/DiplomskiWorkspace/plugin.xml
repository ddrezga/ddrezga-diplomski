<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            fixed="true"
            id="DiplomskiWorkspace.perspective"
            name="Default perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="Producers.view"
            name="Producers">
      </view>
      <view
            allowMultiple="false"
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="Filters.view"
            name="Filters">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="DiplomskiWorkspace.perspective">
         <view
               closeable="false"
               id="Producers.view"
               minimized="false"
               ratio="0.1"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="Filters.view"
               minimized="false"
               relationship="bottom"
               relative="Producers.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu ">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:Producers.view">
         <command
               commandId="OpenVideo.command"
               label="Open video"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <instanceof
                           value="hr.drezga.diplomski.video.core.IVideoProducer">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="OpenSnapshot.command"
               label="Open snapshot"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <instanceof
                           value="hr.drezga.diplomski.video.core.IVideoProducer">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="OpenVideoFilter.command"
               label="Open video filter"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <instanceof
                           value="hr.drezga.diplomski.video.core.IVideoProducer">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="Video.view"
            name="VideoView">
      </editor>
      <editor
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="Snapshot.view"
            name="SnapshotView">
      </editor>
      <editor
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="VideoFilter.view"
            name="VideoFilterView">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.springframework.util.SpringExtensionFactory"
            id="OpenVideo.command"
            name="OpenVideo">
      </command>
      <command
            defaultHandler="org.eclipse.springframework.util.SpringExtensionFactory"
            id="OpenSnapshot.command"
            name="OpenSnapshot">
      </command>
      <command
            defaultHandler="org.eclipse.springframework.util.SpringExtensionFactory"
            id="OpenVideoFilter.command"
            name="OpenVideoFilter">
      </command>
   </extension>

</plugin>
